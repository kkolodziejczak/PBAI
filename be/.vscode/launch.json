    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["src/test/test.js", "--exit", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null
